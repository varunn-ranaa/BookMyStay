<% layout("/layouts/boilerplate") -%>

    <div class="row">
       <div class="col-8 offset-2">
          <h3 style="padding-top: 2rem;">Add New Listing</h3>
        <form  method="post" action="/listing">
           <div class="mb-2">
              <label for="title" class="form-label"><b>Title</b></label>
              <input type="text" name="title" placeholder="Enter title" required id="title" class="form-control"><br>
           </div>

           <div class="mb-2">
               <label for="desc" class="form-label"><b>Description</b></label>
               <input type="text" name="desc" placeholder="Enter Description" required  id="desc" class="form-control"><br>
           </div>
           <div class="mb-2"> 
                <label for="img" class="form-label"><b>Image Url</b></label>
                <input type="text" name="image" placeholder="Enter Image link/url" required id="img" class="form-control"><br>
           </div>
           <div class="row">
               <div class="mb-2 col-md-4">
                <label for="price" class="form-label"><b>Price</b></label>
                <input type="number" name="price" placeholder="Enter Price" required id="price" class="form-control"><br>
               </div>
               <div class="mb-2 col-md-8"> 
                <label for="country" class="form-label"><b>Country</b></label>
                <input type="text" name="country" placeholder="Enter Country" required id="country" class="form-control"><br>
               </div>
           </div>
           <div class="mb-2"> 
                <label for="loc" class="form-label"><b>Location</b></label>
                <input type="text" name="location" placeholder="Enter Location" required id="loc" class="form-control"><br>
           </div>
     
           <button class="btn btn-dark add-btn" type="submit">Add</button>
        </form>
       </div>
    </div><br><br>
